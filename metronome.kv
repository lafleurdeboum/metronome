#:kivy 1.9.1

MetronomeGUI:
    BoxLayout:
        orientation: 'vertical'
        padding: 10

        Switch:
            id: metronome_switch
            on_active: root.switch_metronome()

        Label:
            id: tempo_label
            text: str(root.metronome.tempo)
	    #text: int(tempo_slider.value)
	
	Slider:
	    id: tempo_slider
	    value: root.metronome.tempo
	    on_value: root.set_tempo_label(None, str(int(tempo_slider.value)))
	    on_touch_up: root.set_tempo(int(tempo_slider.value))
	    range: (30, 300)
	    step: 10
	    orientation: 'vertical'

