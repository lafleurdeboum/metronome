#:kivy 1.9.1

MetronomeGUI:
    BoxLayout:
        orientation: 'horizontal'
        padding: 10

        Switch:
            id: metronome_switch
            on_active: root.switch_metronome()

        Slider:
            id: tempo_slider
            value: root.metronome.tempo
            on_touch_up: root.set_tempo(int(tempo_slider.value))
            range: (30, 300)
            step: 3
            orientation: 'vertical'

        Label:
            id: tempo_label
            text: str(int(tempo_slider.value))

